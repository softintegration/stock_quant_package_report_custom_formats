                                    <div class="col-4">
                                        <h1 t-field="o.name" class="mt0 float-left"/>
                                    </div>
                                    <div class="col-8" name="td_pk_barcode" style="text-align: center">
                                        <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                        <p t-field="o.name"/>
                                    </div>
                                </div>-->
                                   <table class="table_pers" style="border-bottom: 0px solid white !important;">
                                        <tr>
                                            <th style="color:#000000 !important;">
                                              <h1 t-field="o.name" class="mt0 float-left"/>
                                            </th>
                                            <th name="td_pk_barcode" style="text-align: center;color:#000000 !important;">
                                                <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                                <p t-field="o.name"/>
                                            </th>
                                        </tr>
                                    </table>
                                   <!--  <div class="row mt32 mb32">
                                        <div t-if="o.package_type_id" class="o_packaging_type col-auto">
                                            <strong>Package Type:</strong>
                                            <p t-field="o.package_type_id.name"/>
                                        </div>
                                    </div>-->
                                    <!-- if we have only one product by package we have to format the output of products accordingly-->
                                <t t-if="only_one_product">
                                    <table class="table_pers table_pers-sm table-bordered" style="border-bottom: 0px solid white !important;font-size:18px !important;"
                                    >
                                        <t t-set="has_serial_number" t-value="o.quant_ids.mapped('lot_id')" />
                                        <tbody>
                                            <t t-if="partner_in_product">
                                                <tr name="tr_one_customer">
                                                    <td name="th_one_product" style="color:#000000 !important;">Customer</td>
                                                    <th style="color:#000000 !important;">
                                                        <t t-if="o.quant_ids"><span t-field="o.quant_ids[0].product_id.partner_id"/></t>
                                                    </th>
                                                </tr>
                                            </t>
                                            <tr name="tr_one_product">
                                                <td width="16%" name="th_one_product" style="color:#000000 !important;">Product</td>
                                                <th width="84%" style="color:#000000 !important;">
                                                    <t t-if="o.quant_ids">
                                                       <span t-field="o.quant_ids[0].product_id.name"/>
                                                    </t>
                                                </th>
                                            </tr>
                                            <t t-if="prepress_proof_in_mrp">
                                                <tr name="tr_one_prepress_proof">
                                                    <td name="th_one_prepress_proof" style="color:#000000 !important;">Prepress Proof</td>
                                                    <th style="color:#000000 !important;"><t t-if="mrp_production and mrp_production.prepress_proof_id"><span t-esc="mrp_production.prepress_proof_id.name"/></t></th>
                                                </tr>
                                                <tr name="tr_one_prepress_proof_client_ref">
                                                    <td name="th_one_prepress_proof_client_ref" style="color:#000000 !important;">Customer Prepress proof reference</td>
                                                    <th style="color:#000000 !important;"><t t-if="mrp_production and mrp_production.prepress_proof_id"><span t-esc="mrp_production.prepress_proof_id.client_ref"/></t></th>
                                                </tr>
                                            </t>
                                            <tr name="tr_one_serial" t-if="has_serial_number">
                                                <td name="th_one_serial" style="color:#000000 !important;">Lot/Serial Number</td>
                                                <th style="color:#000000 !important;">
                                                    <t t-if="o.quant_ids">
                                                        <span t-field="o.quant_ids[0].lot_id.name"/>
                                                    </t>
                                                </th>
                                            </tr>
                                            <tr name="tr_one_quantity">
                                                <td name="th_one_quantity" style="color:#000000 !important;">Quantity</td>
                                                <th style="color:#000000 !important;">
                                                    <t t-if="o.quant_ids">
                                                        <span t-field="o.quant_ids[0].quantity"/> <span t-field="o.quant_ids[0].product_id.uom_id.name"/>
                                                    </t>
                                                </th>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-if="not only_one_product">
                                    <!-- List of products-->
                                    <table class="table_pers table_pers-sm" style="border-bottom: 0px solid white !important;"
                                    >
                                        <t t-set="has_serial_number" t-value="o.quant_ids.mapped('lot_id')" />
                                        <thead>
                                            <tr>
                                                <t t-if="partner_in_product">
                                                    <th>Customer</th>
                                                </t>
                                                <th>Product</th>
                                                <th name="th_quantity" class="text-right">Quantity</th>
                                                <th name="th_uom" groups="uom.group_uom"/>
                                                <th name="th_serial" class="text-right" t-if="has_serial_number">Lot/Serial Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.quant_ids" t-as="l">
                                                <t t-if="partner_in_product">
                                                    <td>
                                                       <span t-field="l.product_id.partner_id"/>
                                                    </td>
                                                </t>
                                                <td>
                                                   <span  t-field="l.product_id.name"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="l.quantity"/>
                                                </td>
                                                <td groups="uom.group_uom">
                                                    <span t-field="l.product_id.uom_id.name"/>
                                                </td>
                                                <td class="text-right" t-if="has_serial_number">
                                                    <t t-if="l.lot_id"><span t-field="l.lot_id.name"/></t>
                                                </td>
                                            </tr>
                                        </tbody>
                                </table>
                                </t>
                            </div>
                    </t>
                </t>
            </t>
    </template>


