<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- A5 -->
    <template id="report_package_barcode">
        <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                            <div class="page">
                                <div class="oe_structure"/>
                                <t t-set="only_one_product" t-value="o._one_product_by_package()" />
                                <t t-set="partner_in_product" t-value="o._set_customer_in_product()" />
                                <t t-set="prepress_proof_in_mrp" t-value="o._set_prepress_proof_in_mrp()"/>
                                <t t-set="mrp_production" t-value="o._get_mrp_production()"/>
                                    <table class="table table-condensed table-bordered" style="border-bottom: 0px solid white !important;">
                                        <tr>
                                            <th>
                                              <h1 t-field="o.name" class="mt0 float-left"/>
                                            </th>
                                            <th name="td_pk_barcode" style="text-align: center">
                                                <div t-field="o.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                                <p t-field="o.name"/>
                                            </th>
                                        </tr>
                                    </table>
                                    <div class="row mt32 mb32">
                                        <div t-if="o.package_type_id" class="o_packaging_type col-auto">
                                            <strong>Package Type:</strong>
                                            <p t-field="o.package_type_id.name"/>
                                        </div>
                                    </div>
                                    <!-- if we have only one product by package we have to format the output of products accordingly-->
                                <t t-if="only_one_product">
                                    <table class="table table-sm table-bordered" style="border-bottom: 0px solid white !important;"
                                    >
                                        <t t-set="has_serial_number" t-value="o.quant_ids.mapped('lot_id')" />
                                        <tbody>
                                            <t t-if="partner_in_product">
                                                <tr name="tr_one_customer">
                                                    <th name="th_one_product"><center>Customer</center></th>
                                                    <td><span t-field="o.quant_ids[0].product_id.partner_id"/></td>
                                                </tr>
                                            </t>
                                            <tr name="tr_one_product">
                                                <th width="20%" name="th_one_product"><center>Product</center></th>
                                                <td width="80%"><span t-field="o.quant_ids[0].product_id.name"/></td>
                                            </tr>
                                            <t t-if="prepress_proof_in_mrp">
                                                <tr name="tr_one_prepress_proof">
                                                    <th name="th_one_prepress_proof"><center>Prepress Proof</center></th>
                                                    <td><t t-if="mrp_production and mrp_production.prepress_proof_id"><span t-esc="mrp_production.prepress_proof_id.name"/></t></td>
                                                </tr>
                                                <tr name="tr_one_prepress_proof_client_ref">
                                                    <th name="th_one_prepress_proof_client_ref"><center>Customer Prepress proof reference</center></th>
                                                    <td><t t-if="mrp_production and mrp_production.prepress_proof_id"><span t-esc="mrp_production.prepress_proof_id.client_ref"/></t></td>
                                                </tr>
                                            </t>
                                            <tr name="tr_one_serial" t-if="has_serial_number">
                                                <th name="th_one_serial"><center>Lot/Serial Number</center></th>
                                                <td><span t-field="o.quant_ids[0].lot_id.name"/></td>
                                            </tr>
                                            <tr name="tr_one_quantity">
                                                <th name="th_one_quantity"><center>Quantity</center></th>
                                                <td><span t-field="o.quant_ids[0].quantity"/> <span t-field="o.quant_ids[0].product_id.uom_id.name"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-if="not only_one_product">
                                    <!-- List of products-->
                                    <table class="table table-sm" style="border-bottom: 0px solid white !important;"
                                    >
                                        <t t-set="has_serial_number" t-value="o.quant_ids.mapped('lot_id')" />
                                        <thead>
                                            <tr>
                                                <t t-if="partner_in_product">
                                                    <th>Customer</th>
                                                </t>
                                                <th>Product</th>
                                                <th name="th_quantity" class="text-right">Quantity</th>
                                                <th name="th_uom" groups="uom.group_uom"/>
                                                <th name="th_serial" class="text-right" t-if="has_serial_number">Lot/Serial Number</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.quant_ids" t-as="l">
                                                <t t-if="partner_in_product">
                                                    <td>
                                                       <span t-field="l.product_id.partner_id"/>
                                                    </td>
                                                </t>
                                                <td>
                                                   <span  t-field="l.product_id.name"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="l.quantity"/>
                                                </td>
                                                <td groups="uom.group_uom">
                                                    <span t-field="l.product_id.uom_id.name"/>
                                                </td>
                                                <td class="text-right" t-if="has_serial_number">
                                                    <t t-if="l.lot_id"><span t-field="l.lot_id.name"/></t>
                                                </td>
                                            </tr>
                                        </tbody>
                                </table>
                                </t>
                            </div>
                    </t>
                </t>
            </t>
    </template>


