<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_quant_package_tree_inherited" model="ir.ui.view">
      <field name="name">view.quant.package.tree.inherited</field>
      <field name="model">stock.quant.package</field>
      <field name="inherit_id" ref="stock.view_quant_package_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="inside">
          <header>
              <button name="action_report_quant_package_barcode_a6_print" type="object"
                      string="Package Barcode with forecasted Content (A6)"
                      invisible="not context.get('print_forcasted_content', False)"/>
          </header>
        </xpath>
      </field>
    </record>


</odoo>
